generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model GuestTemplate {
  id                String            @id @default(uuid())
  password          String
  name              String
  email             String            @unique
  plusOneName       String?
  isInvitedToItaly  Boolean
  isInvitedToUSA    Boolean
  guest             ConfirmedGuest[]
}

model ConfirmedGuest {
  dietaryRestrictions         String?
  plusOneDietaryRestrictions  String?
  firstName                   String
  lastName                    String?
  plusOneFirstName            String?
  plusOneLastName             String?
  id                          String            @id @default(uuid())
  confirmedItaly              Boolean?
  confirmedUsa                Boolean?
  italyKids                   Int?
  italyBus                    Boolean?
  italyPlusOne                Boolean?
  usaKids                     Int?
  usaPlusOne                  Boolean?
  template                    GuestTemplate     @relation(fields: [templateId], references: [id])
  templateId                  String            @unique
}

